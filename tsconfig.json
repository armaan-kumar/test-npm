{
  "compilerOptions": {
    "module": "Node16",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "incremental": true,
    "noErrorTruncation": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.js", "*.cjs", "*.mjs"],
  "exclude": ["node_modules", "dist"]
}